extends base

block content 
    if(errorMessage) 
        span=errorMessage
    form(method="POST")
        input(name="email", type="email", requried, placeholder="email")
        input(name="username", type="text", requried, placeholder="username")
        input(name="password", type="password", requried, placeholder="password")
        input(name="password2", type="password", requried, placeholder="confirm password")
        input(name="name", type="text", requried, placeholder="name")
        input(name="location", type="text", requried, placeholder="location")
        input(type="submit", value="Join")
        include partials/social-login
    div.auth-switch 
        span Already have an account?
        a(href="/login") Log in now &rarr;